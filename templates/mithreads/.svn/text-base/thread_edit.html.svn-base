{% extends "base.html" %}{% load mi_tags %}{% load url from future %}
{% load dajaxice_templatetags %}
{% block title %}Math Insight thread: {{thread}}{% endblock %}
{% block threadmenu %}class="active"{% endblock %}
{% block nolinksection %}{% endblock %}
{% block nopagenav %}{% endblock %}{% block nopagenavsl %}{% endblock %}

{% block extrastyle %}
<script src="{{ STATIC_URL }}js/jquery.dajax.core.js" type="text/javascript"></script>
<script src="{{ STATIC_URL }}js/jquery.ba-serializeobject.min.js" type="text/javascript"></script>
<script src="{{ STATIC_URL }}js/ajaxcsrf.js" type="text/javascript"></script>
{% dajaxice_js_import %} 
{% endblock %}

{% block content %}
<h3>Thread: {{thread}}</h3>

<p><a href="{% url 'mithreads-thread' thread.code %}">Finish editing</a></p>

<p>{{ thread.description }} </p>

<div id="thread_contents">
{{ thread.render_html_edit_string|safe }}
</div>
<p><a href="{% url 'mithreads-thread' thread.code %}">Finish editing</a></p>

{% endblock %}
