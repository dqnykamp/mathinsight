{% extends "base.html" %}
{% load mi_tags comments hitcount_tags%}
{% load url from future %}

{% block title %}{{ image.annotated_title|safe }} - Math Insight{% endblock %}
{% block nolinksection %}{% endblock %}
{% block nopagenav %}{% endblock %}{% block nopagenavsl %}{% endblock %}

{% block extrastyle %}
<meta name="description" content="{{ image.description}} "/>
<script src="{{ STATIC_URL }}js/jquery-latest.js" type="text/javascript"></script>
<script src="{{ STATIC_URL }}js/ajaxcsrf.js" type="text/javascript"></script>
<script type="text/javascript"><!--
    $(document).ready(function() {
        {% get_hit_count_javascript for image %}
    });
--></script>
{% endblock %}

{% block main_columns %}

<h3>{{ image.annotated_title|safe }}</h3>

<img src="{{ imagefile.url }}" alt="{{ image.title }}" width ="{{width}}" height="{{height}}" class="displayed" />

{% process_mi_tags image.detailed_description %}

<p>Image file: <a href="{{ imagefile.url }}">{{ image_filename }}</a></p>
{% if image.original_file %}<p>Source image file: <a href="{{ image.original_file.url }}">{{ original_image_filename }}</a>{% if image.original_file_type%}<br/>Source image type: {{ image.original_file_type.name }}{%endif%}</p>{%endif%}

{% for auxiliary in image.auxiliary_files.all %}<p>{{ auxiliary.file_type.heading }}: <a href="{{  auxiliary.auxiliary_file.url }}">{{ auxiliary.get_filename }}</a></p>{% endfor %}

<h4>Image links</h4>
{% if in_pages %}
<p class="pre_list">This image is found in the pages
<ul class="linklist">
{% for page in in_pages %}
<li>{% intlink page image.anchor %}{{page.title}}{% endintlink %}</li>
{% endfor %}
</ul>
{% endif %}
<p><a href="{% url 'mi-imagelist' %}">List of all images</a></p>
{%if notation_system_form %}
<h4><a href="{%url 'mi-notationsystem' %}" class="normaltext">Notation systems</a></h4>

<form action="{{image.get_absolute_url}}" method="post">{% csrf_token %}
<p><label for="id_notation_system">Select a notation system:</label> <br/>
{{ notation_system_form.notation_system }}
<input type="submit" value="Submit" /></p>
</form>

<p><a href="{%url 'mi-notationsystem' %}">More information on notation systems</a></p>
{%endif%}
{%endblock%}


{% block footer %}
<h4>Cite this as</h4>
{% with cite_authors=image.author_list_abbreviated_link %}
<p>{%if cite_authors%}{{cite_authors|safe}}, {%endif%}&ldquo;{{ image.title_with_period }}&rdquo; From <i>Math Insight</i>. 
  <a href="{{base_url}}{{image.get_absolute_url}}" class="normaltext">{{base_url}}<wbr>{{image.get_absolute_url}}</a></p>
{%endwith%}

<div id="messageform">
<h4>Send us a message about &ldquo;{{image.title}}&rdquo;</h4>
{% render_comment_form for image %}
</div>

{% if image.author_copyright %}
{% with credit_authors=image.author_list_full %}
<h4><a rel="license" href="http://creativecommons.org/licenses/by-nc-sa/3.0/"><img alt="Creative Commons License" style="border-width:0" src="{{STATIC_URL}}image/somerights20.png"/></a></h4>
<p><span xmlns:dct="http://purl.org/dc/terms/" href="http://purl.org/dc/dcmitype/StillImage" property="dct:title" rel="dct:type">{{image.title}}</span> {%if credit_authors%}by <a xmlns:cc="http://creativecommons.org/ns#" href="{{base_url}}{{image.get_absolute_url}}" property="cc:attributionName" rel="cc:attributionURL">{{credit_authors}}</a>{%endif%} is licensed under a <a rel="license" href="http://creativecommons.org/licenses/by-nc-sa/3.0/" class="external">Creative Commons Attribution-Noncommercial-ShareAlike 3.0 License</a>.  For permissions beyond the scope of this license, please <a xmlns:cc="http://creativecommons.org/ns#" href="{{base_url}}{% url 'mi-contact'%}" rel="cc:morePermissions">contact us</a>.</p>
{%endwith%}
{% endif %}

{% if image.additional_credits %}
<h4>Credits</h4>
{{ image.additional_credits|safe }}
{% endif %}

{%endblock%}
