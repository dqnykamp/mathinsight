{% extends "base.html" %}
{% load mi_tags comments %}
{% load url from future %}

{% block title %}Math Insight: What's new{% endblock %}
{% block nolinksection %}{% endblock %}
{% block pagenav %}
  <li><a href="#sitenav">Top</a></li>
  <li><a href="#pages">Pages</a></li>
  <li><a href="#applets">Applets</a></li>
  <li><a href="#videos">Videos</a></li>
  <li><a href="#images">Images</a></li>
{% endblock %}

{% block extrastyle %}
<meta name="description" content="{{newsitem.description}}"/>
{%endblock %}

{% block content %}
<h3>What's new on Math Insight?</h3>

<a id="pages" class="anchor"></a>
<h4>Newest pages</h4>

<ul class="linklist">
  {% for page in newpages %}
  <li>{% intlink page %}{{ page.title }}{%endintlink%}<br/>
    {{ page.description }}<br/>
    Added {% if page.author_list_full %}by {{page.author_list_full_link|safe }}{%endif%} on {{page.publish_date }}</li>
  {% endfor %}
  <li><a href="{% url 'mi-newpages'%}">more new pages</a></li>
</ul>

<a id="applets" class="anchor"></a>
<h4>Newest applets</h4>

<ul class="linklistspace">
  {% for applet in newapplets %}
  <li>{% appletlink applet 3 %}{{applet.annotated_title}}{%endappletlink%}</li>
  {% endfor %}
  <li><a href="{% url 'mi-newapplets'%}">more new applets</a></li>
</ul>

<a id="videos" class="anchor"></a>
<h4>Newest vidoes</h4>

<ul class="linklistspace">
  {% for video in newvideos %}
  <li>{% videolink video 3 %}{{video.annotated_title}}{%endvideolink%}</li>
  {% endfor %}
  <li><a href="{% url 'mi-newvideos'%}">more new videos</a></li>
</ul>

<a id="images" class="anchor"></a>
<h4>Newest images</h4>

<ul class="linklistspace">
  {% for image in newimages %}
  <li>{% imagelink image 3 %}{{image.annotated_title}}{%endimagelink%}</li>
  {% endfor %}
  <li><a href="{% url 'mi-newimages'%}">more new images</a></li>
</ul>

{%endblock %}

{% block rightcolumn %}
<ul class="linklist">
<li><a href="{% url 'mi-newpages' %}">New pages</a></li>
<li><a href="{% url 'mi-newapplets' %}">New applets</a></li>
<li><a href="{% url 'mi-newvideos' %}">New videos</a></li>
<li><a href="{% url 'mi-newimages' %}">New images</a></li>
</ul>
<h3>RSS feeds</h3>
<ul class="linklist">
  <li><a href="{% url 'mi-newsfeed' %}">Recent news</a></li>
  <li><a href="{% url 'mi-newpagefeed' %}">New pages</a></li>
  <li><a href="{% url 'mi-newappletfeed' %}">New applets</a></li>
  <li><a href="{% url 'mi-newvideofeed' %}">New videos</a></li>
  <li><a href="{% url 'mi-newimagefeed' %}">New images</a></li>
</ul>
{%endblock %}
